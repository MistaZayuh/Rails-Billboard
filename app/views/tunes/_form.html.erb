<h1><%= @band.id ? 'Edit Song' : 'Add Song' %></h1>
<hr />
<%= form_with(model: [@band, @tune], local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :genre %>
  <%= f.text_field :genre, required: true %>
  <br />
  <br />
  <%= f.submit class: "ui purple inverted button" %>
<% end %>